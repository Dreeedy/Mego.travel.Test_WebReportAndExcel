@{
    ViewData["Title"] = "Редактирование заказа";
}

<div class="text-left">
    <div>
        <h3>Форма редактирования заказа</h3>
        <form method="post">
            <table>
                <tr>
                    <td>Идентификатор заказа:</td>
                    <td><input type="number" name="Id" value="@ViewBag.OrderId" readonly /></td>
                </tr>
                <tr>
                    <td>Сумма заказа:</td>
                    <td><input type="number" name="Price" value="@ViewBag.OrderPrice" /></td>
                </tr>
                <tr>
                    <td>Дата заказа:</td>
                    <td><input type="datetime" name="Date" value="@ViewBag.OrderDate" /></td>
                </tr>
                <tr><td><input type="submit" value="Отправить" /> </td><td></td></tr>
            </table>
        </form>
        <a href="~/Home/Index/">На главную</a>
    </div>
</div>
