@model IEnumerable<Mego.travel.Test_WebReport_Excel.Models.Order>
@{
    ViewData["Title"] = "Заказы";
}

<div class="text-center">
    <div>
        <h3>Заказы</h3>
        <div>
            <a href="~/Home/Create">Добавить заказ</a>
            <a href="~/Report/Index">Создать отчет</a>
        </div>
        <table>
            <tr>
                <td>Идентификатор</td>
                <td>Сумма заказа</td>
                <td>Дата заказа</td>
                <td></td>
            </tr>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Price</td>
                    <td>@order.Date</td>
                    <td><a href="~/Home/Update/@order.Id">Редактировать</a></td>
                    <td><a href="~/Home/Delete/@order.Id">Удалить</a></td>
                </tr>
            }
        </table>
    </div>
</div>
