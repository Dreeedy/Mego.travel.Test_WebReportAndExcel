@{
    ViewData["Title"] = "Создание отчета";
}

<div class="text-left">
    <div>
        <h3>Форма создания отчета</h3>
        <form method="post" action="~/Report/Index">
            <table>
                <tr>
                    <td>Дата заказа с:</td>
                    <td><input type="datetime-local" name="StartDate" /></td>
                </tr>
                <tr>
                    <td>Дата заказа по:</td>
                    <td><input type="datetime-local" name="EndDate" /></td>
                </tr>
                <tr><td><input type="submit" value="Скачать отчет" /> </td><td></td></tr>
            </table>
        </form>
        <a href="~/Home/Index/">На главную</a>
    </div>
</div>
